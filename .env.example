# Django Configuration
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration - PostgreSQL Only
# Option 1: Use DATABASE_URL (recommended for all environments)
# For local development (PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/payment_db
# For production (automatically provided by Render)
# DATABASE_URL=postgresql://user:password@host:port/database

# Option 2: Use individual PostgreSQL settings (alternative to DATABASE_URL)
# If you don't set DATABASE_URL, these individual settings will be used:
DB_NAME=payment_db
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# Redis Configuration for Caching and Rate Limiting (optional)
REDIS_URL=redis://127.0.0.1:6379/1

# Paystack Configuration
PAYSTACK_SECRET_KEY=sk_test_your_secret_key_here
PAYSTACK_PUBLIC_KEY=pk_test_your_public_key_here
PAYSTACK_BASE_URL=https://api.paystack.co

# Application URLs
FRONTEND_CALLBACK_URL=http://localhost:3000/payment/callback
BACKEND_WEBHOOK_URL=http://localhost:8000/api/payments/webhook/

# Render-specific Environment Variables
# (These are automatically set by Render in production)
RENDER_EXTERNAL_HOSTNAME=your-app-name.onrender.com
RENDER_EXTERNAL_URL=https://your-app-name.onrender.com

# CORS Configuration
CORS_ALLOW_ALL_ORIGINS=false
CSRF_TRUSTED_ORIGINS=https://your-app-name.onrender.com

# Admin User Configuration (for automated deployment)
# These credentials will be used to create an admin user automatically
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=your-secure-admin-password

# Django Superuser Configuration (alternative method)
# These are used by Django's built-in createsuperuser --noinput command
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@yourdomain.com
DJANGO_SUPERUSER_PASSWORD=your-secure-admin-password
